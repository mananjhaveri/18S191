# â•”â•â•¡ 5e27bfe2-12c6-11eb-023e-e5babefa5154
function pretty(M::Matrix{T} where T<:String)
	nax_length = maximum(length.(M))
	dv = "<div style='display:flex;flex-directon:row'>"
	HTML(dv*join([join("<div style='idth:40px; text-align:center'>".*M[i, :].*" </div>", "  ") for i in 1:size(M, 1)]
			, "</div>$dv")*"</div>")
end

# â•”â•â•¡ 4d096ce0-12c6-11eb-20de-d95ec13da886
a2_random_emo = string.(rand("ğŸ’¥ğŸ‘‘ğŸ¼ğŸ•ğŸ†ğŸ¯", 3, 4)) |> pretty

# â•”â•â•¡ 5a49c260-12c6-11eb-3eb4-7d4e35a55c25
# colors OP
colors_5 = distinguishable_colors(5)

# â•”â•â•¡ 4882fa60-12c6-11eb-0f89-7b6753d9af0c
a3_random_colors = rand(colors_5, 5, 5)

# â•”â•â•¡ 42799160-12c6-11eb-1c5e-5d42b23e171b
colors_10 = distinguishable_colors(10)

# â•”â•â•¡ 37df0780-12c6-11eb-03bd-1331fde29905
a4_random_colors = rand(colors_10, 10, 10)

# â•”â•â•¡ 5f4ea920-12c5-11eb-0968-2d4fad2c014d
# images
begin 
	dhoni = load(download("https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcT6sCuu5eg-c0WtvL0nwOoghanJOMypdfLUoA&usqp=CAU"))
	kohli = load(download("https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcRWWGZgPVdzWZppJfzg8rqSWRd-Gfjz1eD_Lw&usqp=CAU"))
end

# â•”â•â•¡ a6873f60-12c9-11eb-20e2-d52234d9b3d7
a5_mahirat = rand([dhoni, kohli], 5, 5)

# â•”â•â•¡ b6c54f10-12ca-11eb-048d-1b4acd827fee
begin
	temp_mahirat = fill(dhoni, 3, 3)
	temp_mahirat[1, 1] = kohli
	temp_mahirat[2, 2] = kohli
	temp_mahirat[3, 3,] = kohli
	temp_mahirat
end

# â•”â•â•¡ 9b4b2180-12cd-11eb-02a3-876ddda517d8
# horizontal concat
[temp_mahirat temp_mahirat]

# â•”â•â•¡ e62c7140-12cd-11eb-09aa-6d03f80c6da3
# vertical concat 
[temp_mahirat; temp_mahirat]

# â•”â•â•¡ 01dce9b0-12ce-11eb-0ed0-eb6bfadf777d
# khichdi
[a4_random_colors a4_random_colors; a4_random_colors a4_random_colors]

# â•”â•â•¡ 1bc79da0-12cb-11eb-066b-2f9213efc9fa
md"### Comprehensions"

# â•”â•â•¡ 295f8900-12cb-11eb-1521-d9c4d7900c1c
multi_table = [i*j for i = 1:4, j = 1:4]

# â•”â•â•¡ 09246d70-12cd-11eb-3edc-e7ff7108e24a
# element wise
multi_table.^2

# â•”â•â•¡ 415c9660-12cb-11eb-13c9-2f3568fa3c16
# matrix multiplication
multi_table ^ 2

